<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/articleListFragment">

    <fragment
        android:id="@+id/articleListFragment"
        android:name="com.example.newsapp.ui.list.ArticleListFragment"
        android:label="Tin mới nhất"
        tools:layout="@layout/fragment_article_list">
        <action
            android:id="@+id/action_articleListFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.newsapp.ui.favorite.FavoriteFragment"
        android:label="Tin đã lưu"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="com.example.newsapp.ui.detail.ArticleDetailFragment"
        android:label="Chi tiết"
        tools:layout="@layout/fragment_article_detail">
        <argument
            android:name="article"
            app:argType="com.example.newsapp.data.local.Article" />
    </fragment>

    <fragment
        android:id="@+id/nav_business"
        android:name="com.example.newsapp.ui.list.ArticleListFragment"
        android:label="Kinh doanh"
        tools:layout="@layout/fragment_article_list" />

    <fragment
        android:id="@+id/nav_tech"
        android:name="com.example.newsapp.ui.list.ArticleListFragment"
        android:label="Công nghệ"
        tools:layout="@layout/fragment_article_list" />

</navigation>